<div class="container">

<h1 class="text-center"> List of Creatures: </h1>
<div class="row">
  <div class="text-center col-xs-8 col-xs-offset-2">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <td>Creature Name</td>
          <td>Link to it's page</td>
          <td>Edit</td>
          <td>Delete</td>
        </tr>
      </thead>
      <tbody>
        <% @creatures.each do |creature| %>
          <tr>
            <td><%= creature.name %></td>
            <td><%= link_to "#{creature.name}'s page!", creature_path(creature) %></td>
            <td><%= link_to 'Edit', edit_creature_path(creature) %></td>
            <td><%= link_to 'Destroy', creature_path(creature), method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <h3 class="text-center"><%= link_to "Add a new creature!", new_creature_path %></h3>
</div>
